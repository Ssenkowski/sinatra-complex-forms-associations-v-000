<h1>Create a new Pet</h1>

<form action="/pets" method="POST">
  <label>Pet's name:</label>
    <input type="text" name="pet[name]" id="pet_name">
  <br></br>
  <input type="submit" value="Create Pet">
  <br></br>
<label> Now select the pet's owner... </label>
  <br></br>
  <%Owner.all.each do |owner|%>
    <input type="checkbox" name="pet[owner_id]" id="<%= owner.name %>" value="<%=owner.id%>"><%=owner.name%></input>
  <%end%>

    <br></br>
  <label> or create a new owner. </label>
    <br></br>
    <label>Owner's name:</label>
      <input type="text" name="owner[name]" id="owner_name"></input>
    <br></br>

  <input type="submit" value="Create Owner">
</form>
